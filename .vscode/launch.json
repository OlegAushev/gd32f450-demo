{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"executable": "${workspaceRoot}/build/apm32f407-mini-template.elf",
			"type": "cortex-debug",
			"servertype": "openocd",
            "configFiles": ["interface/cmsis-dap.cfg", "target/stm32f4x.cfg"],
            "gdbPath": "/opt/arm/gdb-13.2/bin/arm-none-eabi-gdb",
            //"armToolchainPath": "/usr/bin/",
			"device": "APM32F40X",
			"interface": "swd",
			"runToEntryPoint": "main",
			"svdFile": "${workspaceRoot}/APM32F40x.svd",
			"preLaunchTask": "CMake: build",
			"swoConfig": {},
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
		},
		{
			"name": "Attach",
			"request": "attach",
			"cwd": "${workspaceRoot}",
			"executable": "${workspaceRoot}/build/apm32f407-mini-template.elf",
			"type": "cortex-debug",
			"servertype": "openocd",
            "configFiles": ["interface/cmsis-dap.cfg", "target/stm32f4x.cfg"],
            "gdbPath": "/opt/arm/gdb-13.2/bin/arm-none-eabi-gdb",
            //"armToolchainPath": "/usr/bin/",
			"device": "APM32F40X",
			"interface": "swd",
			"runToEntryPoint": "main",
			"svdFile": "${workspaceRoot}/APM32F40x.svd",
			"preLaunchTask": "CMake: build",
			"swoConfig": {},
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
		},
	]
}